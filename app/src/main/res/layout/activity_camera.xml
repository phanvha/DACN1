<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utt.potholes.CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout2"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wonderkiln.camerakit.CameraView
                android:id="@+id/cameraView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|top" />

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_back_white" />

            <Button
                android:id="@+id/btnToggleCamera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_switch_camera"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imgFlash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="45dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/ic_flash_on" />

            <Button
                android:id="@+id/btnCapture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ic_lens"
                />

            <ImageView
                android:id="@+id/imgChooseImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:src="@drawable/ic_collections" />

<!--            <ImageView-->
<!--                android:id="@+id/imgScanner"-->
<!--                android:layout_width="45dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_gravity="bottom|left"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginBottom="35dp"-->
<!--                android:src="@drawable/scanner" />-->


        </FrameLayout>
    </LinearLayout>
</RelativeLayout>







