<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottomSheetLayout"
    android:background="@drawable/custom_layout_white">

    <ImageView
        android:id="@+id/imgBackBottomSheet"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_clear"/>
    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:background="@color/colorDivider"/>-->

    <LinearLayout
        android:id="@+id/imLayout1"
        android:layout_below="@+id/imgBackBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/ic_lens"/>
        <ImageButton
            android:id="@+id/btnCheck"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"/>

    </LinearLayout>



